<html>

<head>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">

</head>

<body>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="section"></div>
  <main>
    <center>
      <img class="responsive-img" style="width: 30%;" src="https://i.kinja-img.com/gawker-media/image/upload/wojsrqpmxrfhjajjzaz6.gif" />
      <div class="section"></div>

      <h5 class="green-text">Dine Out!</h5>
      <div class="section"></div>

      <div class="container-fluid">
        <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border:2px solid #00c853;">

          <div class='row'>
            <div class='input-field col s12'>
              <%= f.label(:email, "Enter your email") %>
              <%= f.email_field :email, :class => "validate", :id=>'email' %>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s12'>
              <%= f.label(:password, "Enter your password") %>
              <%= f.password_field :password, autocomplete: "off", :class=>'validate', :id=>'password' %>
            </div>

            <label style='float: left;'>
              <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
              <% end %>

            </label>
            <label style='float: right; padding-top:3px;'>
              <a class='green-text' href='/users/password/new'><b>Forgot Password?</b></a>
            </label>

          </div>
          <br />
          <center>
            <div class='row'>
              <%= f.submit "Log in", :class => 'col s12 btn btn-large green accent-4'  %>
            </div>
          </center>

        </div>
      </div>

      <% end %>

      <div id="fb-root"></div>
      <div class="fb-login-button" data-max-rows="1" data-size="medium" data-show-faces="false" data-auto-logout-link="false"></div>
      <h6> or </h6>
      <a href="/users/sign_up" style="color:#00c853">Create new account</a>
      <!-- <%= render "users/shared/links"%> -->
    </center>

    <div class="section"></div>
    <div class="section"></div>
  </main>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
</body>

</html>
