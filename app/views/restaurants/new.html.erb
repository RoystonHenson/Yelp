
<% if !@current_user.nil? %>
<h1>New restaurant</h1>

<%= form_for :restaurant, url: restaurants_path do |f| %>
<% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@restaurant.errors.count, "error") %>
      </h2>
      <ul>
        <% @restaurant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>

  <p> You can add up to 5 photos </p>
  <%= f.file_field :avatars, multiple: true %><br>
  <%= f.file_field :avatars, multiple: true %><br>
  <%= f.file_field :avatars, multiple: true %><br>
  <%= f.file_field :avatars, multiple: true %><br>
  <%= f.file_field :avatars, multiple: true %><br>
  <%= f.file_field :avatars, multiple: true %>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<% else %>
<h2> You need to be logged in to add a restaurant </h2>
<% end %>
